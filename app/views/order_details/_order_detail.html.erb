<section class = "order_details_menu", id= "order_details">
	<div id = "detail_core">
	<div><%= link_to 'Back', 'javascript:;', {:id => 'close_details'}, :remote => true %></div>
	<h3>Add this item to your order</h3>
	<% if @item.group.typeID == CARTE %>
		<%= render 'order_details/carte_info' %>
	<% else %>
		<%= render 'order_details/combo_info' %>
	<% end %>
	<%= form_for @detail, :remote => true do |f| %>
	<table>
		<tr>
		<%= render 'order_details/order_detail_form', :f => f %></tr></table>
		<table>
			<tr>
				<td><%= f.submit "Save", :id => 'save_order_detail' %></td>
	<% end %>	
	<td><%= button_to 'Clear order', @detail, :method => :delete, :id => "delete_detail", :remote => true %></td>
			</tr>
		</table>
</div>
</section>

