<%= link_to new_order_detail_path(:item => item, :orderID => @order, :controller => 'order_detail', :action =>'new', :class => 'item_link'), :remote => true do%>
<table class = "item_table">
	<tr>
		<% if item.Price.nil? %>
		<td class = "item_name"><%= item.itemName %></td>
		<% else %>
		<td class = "item_name"><%= item.itemName %> - $<%= item.Price %></td>
		<% end %>
	</tr>
	<tr><td class="item_detail"><%= item.Detail %></td></tr>
</table>
<% end %>